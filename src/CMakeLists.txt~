#add_library(opencvutils opencvutils.c)

add_executable(CircleDetect CircleDetect.cpp)
add_executable(GrabFFFrames GrabFFFrames.cpp)
add_executable(GrabFFFramesColor GrabFFFramesColor.cpp)
add_executable(CircleDetectFile CircleDetectFile.cpp)
add_executable(CaptureVideo CaptureVideo.cpp)

set(OpenCV_LIBS opencv_core opencv_imgproc opencv_calib3d opencv_video opencv_features2d opencv_ml opencv_highgui opencv_objdetect opencv_contrib opencv_legacy opencv_gpu)

#target_link_libraries( opencvutils "dc1394" ${OpenCV_LIBS} )
target_link_libraries( CircleDetect "dc1394" ${OpenCV_LIBS} ) 
target_link_libraries( GrabFFFrames "dc1394" ${OpenCV_LIBS} )
target_link_libraries( GrabFFFramesColor "dc1394" ${OpenCV_LIBS} )
target_link_libraries( CircleDetectFile "dc1394" ${OpenCV_LIBS} )
target_link_libraries( CaptureVideo "dc1394" ${OpenCV_LIBS} )

set(exec_targets GrabFFFrames GrabFFFramesColor CircleDetectFile CaptureVideo CircleDetect)

install(TARGETS ${exec_targets} RUNTIME DESTINATION bin LIBRARY DESTINATION lib ARCHIVE DESTINATION lib)

